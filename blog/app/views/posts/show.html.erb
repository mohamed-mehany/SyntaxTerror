        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1><%= @post.title %> <%= link_to "Edit", edit_post_path, class: "btn btn-primary" %></h1>

                <!-- Author -->
                <p class="lead">
                    by <%= link_to @post.user, @post.user %>
                </p>

                <p class="lead">Categories: <%= raw @post.categories.map(&:name).map { |t| link_to t, category_path(t) }.join(', ') %></p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.strftime("%B %e, %Y at %l:%M %p") %></p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                <hr>

                <!-- Post Content -->
                <%= @post.content.html_safe %>

                <hr>

                <!-- Post Sharing -->
                <b> Share: </b> 
                <%= social_share_button_tag("My Site") %>

                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <%= form_for([@post, @post.comments.build]) do |f| %>
                   <!-- <form role="form"> -->
                        <div class="form-group">
                            <%= f.text_area :body %>
                            <br>
                            <b>By:</b> <br> <%= f.text_field :commenter %>
                            <!-- <textarea class="form-control" rows="3"></textarea> -->
                        </div>
                        <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                        <%= f.submit "Comment", class: "btn btn-primary"%>
                        <% end %>
                    <!-- </form> -->
                </div>
                <%= link_to 'Back', posts_path %> |
                <%= link_to 'Edit', edit_post_path(@post) %>

                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
                <% Post.find(params[:id]).comments.each do |comment| %>
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">
                            <%= comment.commenter %>
                            <small><%= comment.created_at.strftime("%B %e, %Y at %l:%M %p") %></small>
                        </h4>
                        <%= comment.body %>
                    </div>
                </div>       
                <% end %>


                <!-- Comment -->
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                    </a>
                    <div class="media-body">
