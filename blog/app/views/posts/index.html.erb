        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Blog
                    <small>A blog for Syntax Terror</small>
                </h1>
<% @posts.each do |post| %>
                <!-- First Blog Post -->
                <h2>
                    <%= link_to post.title, post %>
                </h2>
                <p class="lead">
                    by <%= link_to User.find(post.user_id).name, User.find(post.user_id) %>
                </p>
                <p>Categories: <%= raw post.categories.map(&:name).map { |t| link_to t, category_path(t) }.join(', ') %></p>
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at.strftime("%B %e, %Y at %l:%M %p") %></p>
                <hr>
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                <hr>
                <p><%= Nokogiri::HTML.parse(post.content).css('p').first.text %></p>
                <%= link_to 'Read More <span class="glyphicon glyphicon-chevron-right"></span>'.html_safe, post, class: 'btn btn-primary' %>




                <hr>
<% end %>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

<%= render "layouts/aside" %>

        </div>
        <!-- /.row -->
